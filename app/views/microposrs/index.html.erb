<p id="notice"><%= notice %></p>

<h1>Microposrs</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @microposrs.each do |microposr| %>
      <tr>
        <td><%= microposr.content %></td>
        <td><%= microposr.user_id %></td>
        <td><%= link_to 'Show', microposr %></td>
        <td><%= link_to 'Edit', edit_microposr_path(microposr) %></td>
        <td><%= link_to 'Destroy', microposr, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

